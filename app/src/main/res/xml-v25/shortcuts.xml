<?xml version="1.0" encoding="utf-8"?>
<shortcuts xmlns:android="http://schemas.android.com/apk/res/android">
    <shortcut
        android:shortcutId="pauseAt0"
        android:enabled="true"
        android:icon="@drawable/ic_shortcut_pause"
        android:shortcutShortLabel="@string/pause_at_0_short"
        android:shortcutLongLabel="@string/pause_at_0_long" >
        <intent android:action="android.intent.action.QUICK_CLOCK"
                android:targetPackage="com.onefishtwo.bbqtimer"
                android:targetClass="com.onefishtwo.bbqtimer.MainActivity" />
        <categories android:name="android.shortcut.conversation" />
    </shortcut>

    <shortcut
        android:shortcutId="startAt0"
        android:enabled="true"
        android:icon="@drawable/ic_shortcut_play"
        android:shortcutShortLabel="@string/start_at_0_short"
        android:shortcutLongLabel="@string/start_at_0_long"  >
        <intent android:action="android.intent.action.RUN"
                android:targetPackage="com.onefishtwo.bbqtimer"
                android:targetClass="com.onefishtwo.bbqtimer.MainActivity" />
        <categories android:name="android.shortcut.conversation" />
    </shortcut>
</shortcuts>
