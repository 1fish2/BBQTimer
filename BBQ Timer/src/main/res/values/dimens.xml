<resources>
    <!-- Default screen margins, per the Android Design guidelines. -->
    <dimen name="activity_horizontal_margin">16dp</dimen>
    <dimen name="activity_vertical_margin">16dp</dimen>

    <dimen name="button_padding">16dp</dimen>
    <dimen name="button_drawable_padding">9dp</dimen>
    <dimen name="button_margin">3dp</dimen>
    <dimen name="small_button_padding">8dp</dimen>
    <dimen name="widget_interior_padding">3dp</dimen>
    <dimen name="max_checkbox_width">300dp</dimen>

    <!-- Widget margin is overridden in values-v14 for API levels >= 14. -->
    <dimen name="widget_margin">8dp</dimen>
    <dimen name="controls_top_margin">12dp</dimen>

    <!-- Text sizes. -->
    <!-- Nexus 1 & Nexus S (320x533 dp) fits 1 hours digit in portrait mode,
        Galaxy Nexus (360x640 dp) fits 2+ hours digits,
        Nexus 4 (384x640 dp) fits 2+ hours digits,
        Nexus 5 (432x768 dp) fits 2+ hours digits,
        Nexus 6 (411x731 dp) fits 2+ hours digits.
        Uses dp instead of sp to fit the space, independent of the user's font size setting. -->
    <dimen name="display_text_size">70dp</dimen>
    <dimen name="widget_text_size">56sp</dimen>
    <dimen name="secondary_text_size">20sp</dimen>
    <dimen name="controls_text_size">18sp</dimen>

</resources>
